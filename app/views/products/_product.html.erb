
<tr>
    <td><%= product.id %></td>
    <td><%= product.name %></td>
    <% 
    if product.inventory != 0 %>
    <td>
      <%= truncate product.description %>
      <button class="js-more" data-id="<%= product.id %>">More Info...</button>
    </td>
    <% else %>
    <td>
      <button class="js-more" data-id="<%= product.id %>">More Info...</button>
    </td>
    <% end %>
    <td><%=product.inventory%></td>
</tr>
